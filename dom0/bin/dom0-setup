#!/usr/bin/env bash
# QubesOS script to bootstrap dom0 config
set -euo pipefail
set -x




sudo qubes-dom0-update -y
sudo qubes-dom0-update -y qubes-repo-contrib
sudo qubes-dom0-update -y \
  fd-find \
  i3 \
  i3-settings-qubes \
  just \
  nitrogen \
  picom \
  redshift \
  ripgrep \
  rofi

sudo qvm-template install fedora-42 debian-13

# Set up services
qvm-service fleet innernet-ruindev --enable
qvm-service personal innernet-ruindev --enable

qvm-service fleet split-ssh --enable
qvm-service personal split-ssh --enable
