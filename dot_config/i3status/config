general {
    colors = true
    interval = 5
}

# order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "path_exists ruindev"
order += "battery all"
order += "volume master"
order += "disk /"
order += "load"
order += "memory"
order += "tztime local"

wireless _first_ {
    # format_up = "ï‡« (%quality at %essid) %ip"
    format_up = "ï‡«%quality %essid %ip"
    # desktops don't use wifi, so hide
    # format_down = "W: down"
    format_down = ""
}

ethernet _first_ {
    format_up = "ðŸ–§: %ip (%speed)"
    format_down = "ðŸ–§"
}

# innernet wg vpn status
path_exists ruindev {
    format = "%title"
    path = "/proc/sys/net/ipv4/conf/ruindev"
}

# see more ideas for battery display here:
# https://i3wm.org/i3status/manpage.html#_configuration
battery all {
    format = "%status %percentage %remaining"
    # desktops don't have batteries, so don't display
    format_down = ""
    # use neat icons for statuses
    status_chr = "ï‡¦"
    status_bat = "ï‰‚"
    status_unk = "ï‰€"
    status_full = "ï‰€"
}

disk "/" {
    # format = "ðŸ’¾ %avail"
    format = "ïƒ‡ %avail"
}

load {
    format = "ï‚€ %1min"
}

memory {
    # format = "%used | %available"
    # format = "%available mem avail"
    # can't figure out a good icon for ram, so fleur-de-lis it is.
    format = "âšœ %available"
    threshold_degraded = "1G"
    format_degraded = "MEMORY < %available"
}

tztime local {
    format = "ï³ %Y-%m-%d ï€— %H:%M:%S %Z"
}

volume master {
    format = "â™ª %volume"
    format_muted = "ï‡· (%volume)"
    device = "default"
}
