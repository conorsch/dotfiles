# Config file for ghostty. See docs at:
# https://ghostty.org/docs/config
#
# Reload config via ctrl+shift+,

# Config syntax crash course
# ==========================
# # The config file consists of simple key-value pairs,
# # separated by equals signs.
# font-family = Iosevka

# As was the case for Alacritty, setting monospace font family by itself
# isn't enough; see also `~/.config/fontconfig/fonts.conf`,
# which forces use of an emoji-capable font.
font-family = Monospace
font-size = 8
# window-padding-x = 2

# disable window borders, to gel with i3.
window-decoration = none

theme = Abernathy
# TODO: find a nice light theme, and figure out how to toggle
# View available themes via: `ghostty +list-themes`
# theme = dark:Abernatyh,light:Catppuccin Latte

# copy/paste clipboard settings
copy-on-select = false
keybind = performable:ctrl+shift+c=copy_to_clipboard
keybind = performable:ctrl+shift+v=paste_from_clipboard
# app-notifications = no-clipboard-copy
app-notifications = no-clipboard-copy

# don't prompt on i3 window kill
confirm-close-surface = false

# performance tweaks, via https://michaelbommarito.com/wiki/programming/tools/ghostty-configuration/
gtk-single-instance = desktop
# ~100mb per terminal
scrollback-limit = 100000000
