#!/usr/bin/perl 
#quick script to take string input and print as designated color;
#Usage:
#print_colored STRING COLOR

use strict;
use warnings;
use Term::ANSIColor; #for printing color text in terminal; stuff;
#Term::ANSIColor may require xterm-256color to be set in your terminal;

my ($string, $color) = @ARGV; #unpack variables from function caller;
print color $color; #set terminal output to desired color;
print $string; #print provided string in desired color;
print color 'reset'; #remove color designations;
