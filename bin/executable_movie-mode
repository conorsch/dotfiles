#!/usr/bin/env bash
# Script to configure display for watching a movie.
set -euo pipefail

requested_mode="${1:-on}"


function enable_movie_mode() {
  # disable automatic screen sleep.
  xset s off -dpms

  # stop screenlock service
  # TODO: is this necessary? disabling dpms should be sufficient, no?
  systemctl --user stop xss-lock

  # disable warm mode via redshift
  systemctl --user stop redshift

  # configure external displays
  monitor-setup
}

function disable_movie_mode() {
  # disable automatic screen sleep.
  xset s on -dpms

  # restart screenlock service
  systemctl --user start xss-lock

  # re-enable warm mode via redshift
  systemctl --user restart redshift

  # configure external displays
  monitor-setup
}

if [[ "$requested_mode" = "on" ]] ; then
  enable_movie_mode
elif [[ "$requested_mode" = "off" ]] ; then
  disable_movie_mode
fi

